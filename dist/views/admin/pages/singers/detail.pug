extends ../../layouts/default.pug

block main
    if(singer.fullName)
        h1(class="mb-4") #{singer.fullName}

    if(singer.avatar)
        div(class="mb-4")
            img(
                src=singer.avatar
                style="width: 100px"
            )
    
    if(singer.description)
        div(class="mb-4")
            span <b>Mô tả: </b> !{singer.description}
    
    if(singer.position)
        div(class="mb-4")
            span <b>Vị trí: </b> #{singer.position}
    
    if(singer.status)
        div(class="mb-4")
            span <b>Trạng thái: </b>
            if(singer.status === "active")
                span(class="badge badge-success") Hoạt động 
            else
                span(class="badge badge-danger") Dừng hoạt động

    if(role.permissions.includes("singers_edit))
        a(
            class="btn btn-warning"
            href=`/${prefixAdmin}/singers/edit/${singer.id}`
        ) Chỉnh sửa

    script(src="/admin/js/singer.js") 