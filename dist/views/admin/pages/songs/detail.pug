extends ../../layouts/default.pug

block main
    if(song.title)
        h1(class="mb-4") #{song.title}

    if(song.avatar)
        div(class="mb-4")
            img(
                src=song.avatar
                style="width: 100px"
            )
    
    if(song.description)
        div(class="mb-4") 
            span <b>Mô tả: </b> !{song.description}

    if(singer)
        div(class="mb-4")
            span <b>Ca sĩ: </b> #{singer.fullName}

    if(topic)
        div(class="mb-4")
            span <b>Chủ đề: </b> #{topic.title}

    if(song.like)
        div(class="mb-4")
            span <b>Lượt thích: </b> <b>#{song.like}</b>

    if(song.listen)
        div(class="mb-4")
            span <b>Số lượt nghe: </b> <b>#{song.listen}</b>
    
    if(song.lyrics)
        div(class="mb-4")
            div <b>Lời bài hát: </b> !{song.lyrics}

    if(song.audio)
        div(class="mb-4")
            label(for="audio") <b>File âm thanh</b>
            input(
                type="file"
                class="form-control-file"
                id="audio"
                name="audio"
                accept="audio/*"
                upload-audio-input
            )
            audio(controls upload-audio-play) 
                source(src=song.audio)
    
    if(song.status)
        div(class="mb-4")
            span <b>Trạng thái: </b>
            if(song.status === "active")
                span(class="badge badge-success") Hoạt động 
            else
                span(class="badge badge-danger") Dừng hoạt động

    if(role.permissions.includes("songs_edit"))
        a(
            class="btn btn-warning"
            href=`/${prefixAdmin}/songs/edit/${song.id}`
        ) Chỉnh sửa

    script(src="/admin/js/song.js") 