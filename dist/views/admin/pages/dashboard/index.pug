extends ../../layouts/default.pug

block main
    h1 Trang tổng quan

    .row.mt-4 
        .col-12 
            .card.mb-4 
                .card-header Thông tin tài khoản
                .card-body 
                    if(user.avatar)
                        img(
                            src=user.avatar
                            style="height: 100px; margin-bottom: 15px;"
                        )
                    if(user.fullName)
                        p Họ tên: <b>#{user.fullName}</b>
                    if(user.email)
                        p Email: <b>#{user.email}</b>
                    if(user.phone)
                        p Số điện thoại: <b>#{user.phone}</b>
                    if(role.title)
                        p Phân quyền: <b>#{role.title}</b>

        .col-6 
            .card.mb-4 
                .card-header Chủ đề
                .card-body 
                    p Số lượng: <b>#{statistic.topic.total}</b>
                    p Hoạt động: <b>#{statistic.topic.active}</b>
                    p Dừng hoạt động: <b>#{statistic.topic.inactive}</b>
        
        .col-6 
            .card.mb-4 
                .card-header Bài hát
                .card-body 
                    p Số lượng: <b>#{statistic.song.total}</b>
                    p Hoạt động: <b>#{statistic.song.active}</b>
                    p Dừng hoạt động: <b>#{statistic.song.inactive}</b>

        .col-6 
            .card.mb-4 
                .card-header Ca sỹ
                .card-body 
                    p Số lượng: <b>#{statistic.singer.total}</b>
                    p Hoạt động: <b>#{statistic.singer.active}</b>
                    p Dừng hoạt động: <b>#{statistic.singer.inactive}</b>

        .col-6 
            .card.mb-4 
                .card-header Tài khoản admin
                .card-body 
                    p Số lượng: <b>#{statistic.account.total}</b>
                    p Hoạt động: <b>#{statistic.account.active}</b>
                    p Dừng hoạt động: <b>#{statistic.account.inactive}</b>

        .col-6 
            .card.mb-4 
                .card-header Tài khoản client
                .card-body 
                    p Số lượng: <b>#{statistic.user.total}</b>
                    p Hoạt động: <b>#{statistic.user.active}</b>
                    p Dừng hoạt động: <b>#{statistic.user.inactive}</b>