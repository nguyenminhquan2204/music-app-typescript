header.header 
    .container 
        .row.align-items-center 
            .col-3 
                .inner-logo 
                    a(href="/")
                        img(src=settingGeneral.logo, alt="Logo")
            .col-5 
                .box-search 
                    form(
                        action="/search/result"
                        method="GET"
                    )
                        div(class="form-group d-flex mb-0")
                            input(
                                type="text"
                                placeholder="Nhập từ khóa ..."
                                class="form-control"
                                name="keyword"
                                value=keyword
                            )
                            button(
                                type="submit"
                                class="btn btn-primary"
                            ) Tìm
                    .inner-suggest
                        .inner-list 
                            //- a(href=`/songs/detail/:slugSong` class="inner-item")
                            //-     .inner-image 
                            //-         img(src="")
                            //-     .inner-info 
                            //-         .inner-title Quan 
                            //-         .inner-singer 
                            //-             <i class="fa-solid fa-microphone-lines"></i> Quan 
                                                                        
            .col-4
                .inner-menu 
                    ul 
                        li 
                            a(href="/topics") <i class="fa-solid fa-house"></i> Trang chủ
                        li
                            a(href="/topics") <i class="fa-solid fa-music"></i> Chủ đề
                        if(user)
                            li
                                a(href="/favorite-songs") <i class="fa-solid fa-heart"></i> Yêu thích
                            li
                                a(href=`/user/info/${user.id}`) <i class="fa-solid fa-user"></i> #{user.fullName}
                            li
                                a(href="/user/logout") <i class="fa-solid fa-arrow-left-to-bracket"></i> Đăng xuất
                        else
                            li
                                a(href="/user/login") <i class="fa-solid fa-right-to-bracket"></i> Đăng nhập
                            li
                                a(href="/user/register") <i class="fa-solid fa-arrow-left-to-bracket"></i> Đăng ký